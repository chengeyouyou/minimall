/* components/dk-tab-control/dk-tab-control.wxss */
.tab-control{
  display: flex;
  text-align: center;
}

.tab-control-item{
  flex:1;
  position: relative;
  padding-bottom: 20rpx;
}

.tab-control-item.active::after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
  width: 60%;
  height: 2px;
  background-color: #ff5777;
}

