.line{
  position: relative;
  padding: 10rpx 0;
}
.start.line::before{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 180rpx;
  height: 2rpx;
  background-color: #666;
}
.end.line::before{
  content: '';
  position: absolute;
  right: 0;
  bottom: 0;
  width: 180rpx;
  height: 2rpx;
  background-color: #666;
}
.start::after{
  content: '';
  position: absolute;
  left: -2rpx;
  top: -10rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #000;
}
.end::after{
  content: '';
  position: absolute;
  right: -2rpx;
  bottom: 0rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #000;
}

.wrap{
  padding: 10rpx 20rpx;
  margin-bottom:10rpx;
}

.wrap .header{
  font-size: 28rpx;
}

.wrap .content{
  margin-top: 20rpx;
  border-bottom: 15rpx solid rgba(0, 0, 0, 0.1);
}